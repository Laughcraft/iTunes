<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginStart="16dp"
	android:layout_marginEnd="16dp"
	android:orientation="horizontal">
	
	<ScrollView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1">
		
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="16dp"
			android:paddingRight="16dp">
			
			<ImageView
				android:id="@+id/image_view_details"
				android:layout_width="140dp"
				android:layout_height="140dp"
				android:layout_marginTop="16dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				tools:srcCompat="@tools:sample/avatars" />
			
			<TextView
				android:id="@+id/text_view_details_title"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginLeft="16dp"
				android:maxLines="2"
				android:textSize="22sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/image_view_details"
				app:layout_constraintTop_toTopOf="@+id/image_view_details"
				tools:text="Can't Help Falling In Love" />
			
			<TextView
				android:id="@+id/text_view_details_artist_name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginLeft="16dp"
				android:layout_marginTop="8dp"
				android:maxLines="2"
				android:textSize="18sp"
				app:layout_constraintStart_toEndOf="@+id/image_view_details"
				app:layout_constraintTop_toBottomOf="@+id/text_view_details_title"
				tools:text="Elvis Presley" />
			
			<TextView
				android:id="@+id/text_view_details_genre"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginLeft="16dp"
				android:layout_marginTop="8dp"
				android:textSize="18sp"
				app:layout_constraintStart_toEndOf="@+id/image_view_details"
				app:layout_constraintTop_toBottomOf="@+id/text_view_details_artist_name"
				tools:text="Rock" />
			
			<TextView
				android:id="@+id/text_view_details_year_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:text="@string/year_title"
				android:textSize="18sp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/image_view_details" />
			
			<TextView
				android:id="@+id/text_view_details_year"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="right"
				android:textSize="18sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/text_view_details_year_title"
				app:layout_constraintTop_toTopOf="@+id/text_view_details_year_title"
				tools:text="1961" />
			
			<TextView
				android:id="@+id/text_view_details_explicitness_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:text="@string/explicitness_title"
				android:textSize="18sp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/text_view_details_year_title" />
			
			<TextView
				android:id="@+id/text_view_details_explicitness"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="right"
				android:textSize="18sp"
				app:layout_constraintBottom_toBottomOf="@+id/text_view_details_explicitness_title"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/text_view_details_explicitness_title"
				app:layout_constraintTop_toTopOf="@+id/text_view_details_explicitness_title"
				tools:text="Not Explicit" />
			
			<TextView
				android:id="@+id/text_view_details_price_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:text="@string/price_title"
				android:textSize="18sp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/text_view_details_explicitness_title" />
			
			<TextView
				android:id="@+id/text_view_details_price"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="right"
				android:textSize="18sp"
				app:layout_constraintBottom_toBottomOf="@+id/text_view_details_price_title"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/text_view_details_price_title"
				app:layout_constraintTop_toTopOf="@+id/text_view_details_price_title"
				tools:text="$1.99" />
			
			<TextView
				android:id="@+id/text_view_details_copyright_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:text="@string/copyright_title"
				android:textSize="18sp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/text_view_details_track_count_title" />
			
			<TextView
				android:id="@+id/text_view_details_copyright"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:gravity="right"
				android:textSize="18sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/text_view_details_copyright_title"
				app:layout_constraintTop_toBottomOf="@+id/text_view_details_track_count_title"
				tools:text="Lesser GPL 3.0" />
			
			<TextView
				android:id="@+id/text_view_details_track_count_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:text="@string/track_count_title"
				android:textSize="18sp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/text_view_details_price_title" />
			
			<TextView
				android:id="@+id/text_view_details_track_count"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="right"
				android:textSize="18sp"
				app:layout_constraintBottom_toBottomOf="@+id/text_view_details_track_count_title"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/text_view_details_track_count_title"
				app:layout_constraintTop_toTopOf="@+id/text_view_details_track_count_title"
				tools:text="12" />
			
			<androidx.constraintlayout.widget.Guideline
				android:id="@+id/guideline2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical" />
		
		</androidx.constraintlayout.widget.ConstraintLayout>
	
	</ScrollView>
	
	<FrameLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1">
		
		<ProgressBar
			android:id="@+id/progress_bar_details"
			style="?android:attr/progressBarStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:indeterminate="true"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="@+id/guideline"
			app:layout_constraintTop_toTopOf="parent" />
		
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recycler_view_details_songs"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginStart="16dp"
			android:layout_marginLeft="16dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="@+id/guideline"
			app:layout_constraintTop_toTopOf="parent" />
	
	</FrameLayout>

</LinearLayout>
