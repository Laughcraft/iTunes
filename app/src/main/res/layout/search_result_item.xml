<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="16dp"
	android:paddingRight="16dp">
	
	<ImageView
		android:id="@+id/image_view_search_result_image"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_marginStart="6dp"
		android:layout_marginLeft="6dp"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="16dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:srcCompat="@tools:sample/avatars" />
	
	<TextView
		android:id="@+id/text_view_search_result_title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="22dp"
		android:layout_marginLeft="22dp"
		android:textColor="@android:color/black"
		android:textSize="18sp"
		app:layout_constraintBottom_toTopOf="@+id/text_view_search_result_artist_name"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/image_view_search_result_image"
		app:layout_constraintTop_toTopOf="@+id/image_view_search_result_image"
		app:layout_constraintVertical_chainStyle="spread_inside"
		tools:text="Can't Help Falling In Love" />
	
	<TextView
		android:id="@+id/text_view_search_result_artist_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="22dp"
		android:layout_marginLeft="22dp"
		android:textColor="@android:color/black"
		android:textSize="16sp"
		app:layout_constraintBottom_toTopOf="@+id/text_view_search_result_year"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/image_view_search_result_image"
		app:layout_constraintTop_toBottomOf="@+id/text_view_search_result_title"
		tools:text="Elvis Presley" />
	
	<TextView
		android:id="@+id/text_view_search_result_year"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="22dp"
		android:layout_marginLeft="22dp"
		android:textColor="@android:color/black"
		app:layout_constraintBottom_toBottomOf="@+id/image_view_search_result_image"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/image_view_search_result_image"
		app:layout_constraintTop_toBottomOf="@+id/text_view_search_result_artist_name"
		tools:text="1961" />
	
	<View
		android:layout_width="0dp"
		android:layout_height="2px"
		android:background="@android:color/darker_gray"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>